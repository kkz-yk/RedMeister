<% if session["r_url"] == nil %>
<%= form_tag ({:controller => 'redmines', :action => :getProjects}) do -%>
<h2>Redmine</h2>
Server URL
　　<%= text_field_tag 'text_field[r_url]', '', :size => 80 %><br>
User Name
　　<%= text_field_tag 'text_field[r_user_name]', '', :size => 40 %><br>
Password
　　<%= text_field_tag 'text_field[r_password]', '', :size => 40 %><br>

<%= submit_tag 'Send' %>
<% end  -%>
<% else %>
<h2>Redmineでログインなう</h2>
Redmine Server URL<br>
[ <%= session["r_url"] %> ]<br><br>
Redmine User Name<br>
